<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.selfstudy.SelfStudyViewController">
	<padding>
		<Insets top="25" right="25" bottom="25" left="25" />
	</padding>
	<columnConstraints>
		<ColumnConstraints hgrow="NEVER" prefWidth="200.0"  />
		<ColumnConstraints hgrow="NEVER" prefWidth="200.0"  />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints prefHeight="25" vgrow="NEVER" />
		<RowConstraints prefHeight="25"  vgrow="NEVER" />
		<RowConstraints prefHeight="25"  vgrow="NEVER" />
		<RowConstraints prefHeight="25" vgrow="NEVER" />
		<RowConstraints prefHeight="25" vgrow="NEVER" />
		<RowConstraints prefHeight="25" vgrow="NEVER" />
		<RowConstraints prefHeight="25" vgrow="NEVER" />
		<RowConstraints fillHeight="true" vgrow="ALWAYS" />
	</rowConstraints>
	  <children>
          <Label text="Course : " />
      	  <Label fx:id="courseLabel"  GridPane.columnIndex="1" />
      	   <Label text="Date : "   GridPane.rowIndex="1" />
      	  <Label fx:id="dateLabel"  GridPane.columnIndex="1"  GridPane.rowIndex="1" />
      	  <Label text="Location : "  GridPane.rowIndex="2"/>
      	  <TextField fx:id="locationTextField"  GridPane.rowIndex="2" GridPane.columnIndex="1" />
      	    
      	   <Label text="Start Time : "  GridPane.rowIndex="3"/>
      	    <TextField fx:id="startTimeTextField"  GridPane.rowIndex="3" GridPane.columnIndex="1" />
      	    <Label text="Duration (mins) : "  GridPane.rowIndex="4"/>
      	    <TextField fx:id="durationTextField"  GridPane.rowIndex="4" GridPane.columnIndex="1" />
      	     <Label text="Goal : "  GridPane.rowIndex="5"/>
      	     <TextField fx:id="goalTextField"  GridPane.rowIndex="5" GridPane.columnIndex="1" />
      	     <Label text="Notes : "  GridPane.rowIndex="6"/>
      	    <TextArea fx:id="notesTextArea"  GridPane.rowIndex="6" GridPane.columnIndex="1" />
      	    
      	
      	   <Button mnemonicParsing="false" onAction="#save"  text="Save" GridPane.columnIndex="1" GridPane.rowIndex="7" />
      	  
      	  <VBox fx:id="validationSummary" GridPane.rowIndex="8"
			GridPane.columnSpan="2">
		</VBox>
         </children>
</GridPane>

